<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="event_subscriber.add_post_author_activity"
                 class="Acme\Application\Blog\Event\Post\Subscriber\AddAuthorActivitySubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostCreated"
                 method="__invoke"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostUpdated"
                 method="__invoke"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostPublished"
                 method="__invoke"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostDeleted"
                 method="__invoke"/>
        </service>

        <service id="event_subscriber.add_comment_author_activity"
                 class="Acme\Application\Blog\Event\Comment\Subscriber\AddAuthorActivitySubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentCreated"
                 method="__invoke"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentUpdated"
                 method="__invoke"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentDeleted"
                 method="__invoke"/>
        </service>

    </services>

</container>
