<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="event_factory.post"
                 class="Acme\Application\Blog\Event\Post\PostEventFactory"
                 autowire="true">
        </service>
        <service id="event_factory.comment"
                 class="Acme\Application\Blog\Event\Comment\CommentEventFactory"
                 autowire="true">
        </service>

        <!-- Comment Subscribers -->
        <service id="event_subscriber.comment.add_author_activity"
                 class="Acme\Application\Blog\Event\Comment\Subscriber\AddAuthorActivitySubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentUpdated"/>
        </service>
        <service id="event_subscriber.comment.increment_author_counter"
                 class="Acme\Application\Blog\Event\Comment\Subscriber\IncrementCommentAuthorCounterSubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentDeleted"/>
        </service>
        <service id="event_subscriber.comment.increment_counter"
                 class="Acme\Application\Blog\Event\Comment\Subscriber\IncrementCommentCounterSubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Comment\CommentDeleted"/>
        </service>

        <!-- Post Subscribers -->
        <service id="event_subscriber.post.add_author_activity"
                 class="Acme\Application\Blog\Event\Post\Subscriber\AddAuthorActivitySubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostUpdated"/>
        </service>
        <service id="event_subscriber.post.increment_author_counter"
                 class="Acme\Application\Blog\Event\Post\Subscriber\IncrementPostAuthorCounterSubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostDeleted"/>
        </service>
        <service id="event_subscriber.post.increment_counter"
                 class="Acme\Application\Blog\Event\Post\Subscriber\IncrementPostCounterSubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostDeleted"/>
        </service>
        <service id="event_subscriber.post.increment_taxonomy_counter"
                 class="Acme\Application\Blog\Event\Post\Subscriber\IncrementPostTaxonomyCounterSubscriber"
                 autowire="true">
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostCreated"/>
            <tag name="event_subscriber"
                 subscribes_to="Acme\Application\Blog\Event\Post\PostDeleted"/>
        </service>

    </services>

</container>
