<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="security.firewall_config"
                 class="Acme\Infrastructure\Bundle\AppBundle\Security\FirewallConfig"
                 public="false">
            <argument type="collection"/><!-- replaced by AppExtension -->
        </service>

        <!-- Domain Voters -->
        <service id="security.domain_voter.comment"
                 class="Acme\Domain\Blog\Security\Voter\CommentVoter"
                 public="false"
                 autowire="true"/>
        <service id="security.domain_voter.post"
                 class="Acme\Domain\Blog\Security\Voter\PostVoter"
                 public="false"
                 autowire="true"/>

        <!-- Framework Voters -->
        <service id="security.domain.comment"
                 class="Acme\Infrastructure\Bundle\AppBundle\Security\Voter\CommentVoter"
                 public="false"
                 autowire="true">
            <tag name="security.voter"/>
        </service>
        <service id="security.domain.post"
                 class="Acme\Infrastructure\Bundle\AppBundle\Security\Voter\PostVoter"
                 public="false"
                 autowire="true">
            <tag name="security.voter"/>
        </service>

    </services>

</container>
