{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <p>by {{ post.author }}</p>
    {{ post.body|raw }}
    <p>
        <a href="{{ path('post_list') }}">blog</a> |
        <a href="{{ path('post_update', { id: post.id }) }}">update</a>
    </p>
    {{ render(controller('AcmeBlogBundle:Comment:list', { postId: post.id })) }}
    <p>
        <a href="{{ path('post_add_comment', { postId: post.id }) }}">add comment</a>
    </p>
{% endblock %}
