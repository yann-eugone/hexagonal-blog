{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <p>
        by {{ post.author }}
        in <a href="{{ path('post_list_by_category', { category: post.category.id }) }}">{{ post.category }}</a>
    </p>
    {{ post.body|raw }}
    <p>{% for tag in post.tags %}<a href="{{ path('post_list_by_tag', { tag: tag.id }) }}">#{{ tag }}</a> {% endfor %}</p>
    <p>
        <a href="{{ path('post_list') }}">blog</a> |
        <a href="{{ path('post_update', { postId: post.id }) }}">update</a>
    </p>
    {{ render(url('post_list_comment', { id: post.id })) }}
    <p>
        <a href="{{ path('post_add_comment', { postId: post.id }) }}">add comment</a>
    </p>
{% endblock %}
